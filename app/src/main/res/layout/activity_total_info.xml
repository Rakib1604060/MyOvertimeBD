<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
  >

    <TextView
        android:id="@+id/ttext"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="@color/header"
        android:gravity="center_horizontal"
        android:text="@string/currentmont"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"

        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_marginTop="8dp"
        android:layout_below="@id/ttext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/header">
            <TableRow>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="@string/shift"
                    android:id="@+id/shif"
                    android:textSize="@dimen/Table_text_head"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <TextView
                    android:text="@string/hour"
                    android:id="@+id/hou"
                    android:textSize="@dimen/Table_text_head"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="@string/regular"
                    android:layout_weight="1"
                    android:textSize="@dimen/Table_text_body"
                    android:id="@+id/reg"
                    android:gravity="center"
                    android:background="#fff"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <TextView
                    android:id="@+id/rghr"
                    android:textSize="@dimen/Table_text_body"
                    android:text="@string/hour"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="#fff"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="@string/day"
                    android:id="@+id/day1"
                    android:textSize="@dimen/Table_text_body"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="#fff"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:id="@+id/dhr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="@string/hour"
                    android:textSize="@dimen/Table_text_body" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="@string/night"
                    android:id="@+id/night1"
                    android:textSize="@dimen/Table_text_body"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="#fff"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <TextView
                    android:id="@+id/nhr"
                    android:textSize="@dimen/Table_text_body"
                    android:text="@string/hour"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="#fff"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </TableRow>
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:id="@+id/holid1"
                    android:gravity="center"
                    android:text="@string/holiday"
                    android:textSize="@dimen/Table_text_body" />
                <TextView
                    android:id="@+id/hlhr"
                    android:textSize="@dimen/Table_text_body"
                    android:text="@string/hour"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="#fff"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="@string/total"
                    android:textSize="@dimen/Table_text_head"
                    android:textStyle="bold"
                    android:id="@+id/total1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="#fff"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <TextView
                    android:id="@+id/thr"
                    android:textSize="@dimen/Table_text_head"
                    android:text="@string/hour"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="#fff"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/ttext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:padding="5dp"
        android:layout_marginRight="8dp"
        android:background="@color/header"
        android:gravity="center_horizontal"
        android:text="@string/previousmonth"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"

        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ttext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="1dp"
            android:background="@color/header">

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/shift"
                    android:id="@+id/shift2"
                    android:textSize="@dimen/Table_text_head"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/hour"
                    android:id="@+id/hou3"
                    android:textSize="@dimen/Table_text_head"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:id="@+id/reg2"
                    android:gravity="center"
                    android:text="@string/regular"
                    android:textSize="@dimen/Table_text_body" />

                <TextView
                    android:id="@+id/prghr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="@string/hour"
                    android:textSize="@dimen/Table_text_body" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:id="@+id/day2"
                    android:text="@string/day"
                    android:textSize="@dimen/Table_text_body" />

                <TextView
                    android:id="@+id/pdhr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="@string/hour"
                    android:textSize="@dimen/Table_text_body" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:id="@+id/night2"
                    android:text="@string/night"
                    android:textSize="@dimen/Table_text_body" />

                <TextView
                    android:id="@+id/pnhr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="@string/hour"
                    android:textSize="@dimen/Table_text_body" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="@string/holiday"
                    android:id="@+id/holid2"
                    android:textSize="@dimen/Table_text_body" />

                <TextView
                    android:id="@+id/phlhr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="@string/hour"
                    android:textSize="@dimen/Table_text_body" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="Total"
                    android:id="@+id/total2"
                    android:textSize="@dimen/Table_text_head"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pthr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="@string/hour"
                    android:textSize="@dimen/Table_text_head"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</RelativeLayout>